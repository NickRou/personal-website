---
const pathname = Astro.url.pathname;
import Logo from "../../public/favicon.svg";
---

<div
    class="navbar bg-base-100 flex flex-col items-center pt-10 pb-10 pl-0 pr-0"
>
    <div class="w-full flex items-center justify-center relative pb-2">
        <div class="absolute left-0">
            <Logo class="h-8 w-8" />
        </div>
        <a class="text-2xl font-semibold">Nicklas Rouvinen</a>
    </div>
    <div class="flex flex-row gap-4 font-light text-sm">
        <a
            href="/"
            class={pathname === "/"
                ? "border-b border-green-500 text-green-500"
                : ""}>Home</a
        >
        <a
            href="/work"
            class={pathname === "/work"
                ? "border-b border-green-500 text-green-500"
                : ""}>Work</a
        >
        <a
            href="/personal"
            class={pathname === "/personal"
                ? "border-b border-green-500 text-green-500"
                : ""}>Photos</a
        >
    </div>
</div>
