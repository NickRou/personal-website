---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import peruPicture from "../assets/2024/peru-alpine-lake.jpeg";
import bigSurPicture from "../assets/2024/big-sur.jpeg";
import sanJacintoPicture from "../assets/2024/san-jacinto.jpeg";
import spaceXPicture from "../assets/2024/space-x.jpeg";
import steamboatPicture from "../assets/2024/steamboat.jpeg";
import cowPicture from "../assets/2025/cow.jpeg";
import rockPicture from "../assets/2025/rock.jpeg";
import mdoPicture from "../assets/2025/mdo.jpeg";
---

<Layout pageTitle="Photos">
    <h1 class="text-xl font-semibold pb-4">2025</h1>
    <div class="carousel">
        <div class="carousel-item">
            <Image
                src={cowPicture}
                alt="Cow"
                width={600}
                height={400}
                densities={[2, 3]}
            />
        </div>
        <div class="carousel-item">
            <Image
                src={mdoPicture}
                alt="MDO"
                width={600}
                height={400}
                densities={[2, 3]}
            />
        </div>
        <div class="carousel-item">
            <Image
                src={rockPicture}
                alt="rock"
                width={600}
                height={400}
                densities={[2, 3]}
            />
        </div>
    </div>
    <h1 class="text-xl font-semibold pt-4 pb-4">2024</h1>
    <div class="carousel">
        <div class="carousel-item">
            <Image
                src={bigSurPicture}
                alt="Big Sur"
                width={600}
                height={400}
                densities={[2, 3]}
            />
        </div>
        <div class="carousel-item">
            <Image
                src={peruPicture}
                alt="Peru"
                width={600}
                height={400}
                densities={[2, 3]}
            />
        </div>
        <div class="carousel-item">
            <Image
                src={sanJacintoPicture}
                alt="San Jacinto"
                width={600}
                height={400}
                densities={[2, 3]}
            />
        </div>
        <div class="carousel-item">
            <Image
                src={spaceXPicture}
                alt="Space X"
                width={600}
                height={400}
                densities={[2, 3]}
            />
        </div>
        <div class="carousel-item">
            <Image
                src={steamboatPicture}
                alt="steamboat"
                width={600}
                height={400}
                densities={[2, 3]}
            />
        </div>
    </div>
</Layout>
